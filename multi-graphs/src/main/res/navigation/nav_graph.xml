<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFlowFragment">

    <fragment
        android:id="@+id/mainFlowFragment"
        android:name="com.geeks.multi_graphs.presentation.ui.fragments.main.MainFlowFragment"
        android:label="fragment_main_flow"
        tools:layout="@layout/fragment_main_flow" >
        <action
            android:id="@+id/action_mainFlowFragment_to_paymentFlowFragment"
            app:destination="@id/paymentFlowFragment" />
        <action
            android:id="@+id/action_mainFlowFragment_to_settingsFlowFragment"
            app:destination="@id/settingsFlowFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFlowFragment"
        android:name="com.geeks.multi_graphs.presentation.ui.fragments.registration.RegistrationFlowFragment"
        android:label="fragment_registration_flow"
        tools:layout="@layout/fragment_registration_flow" >
        <action
            android:id="@+id/action_registrationFlowFragment_to_mainFlowFragment"
            app:destination="@id/mainFlowFragment" />
    </fragment>

    <fragment
        android:id="@+id/paymentFlowFragment"
        android:name="com.geeks.multi_graphs.presentation.ui.fragments.payment.PaymentFlowFragment"
        android:label="fragment_payment_flow"
        tools:layout="@layout/fragment_payment_flow" />

    <fragment
        android:id="@+id/settingsFlowFragment"
        android:name="com.geeks.multi_graphs.presentation.ui.fragments.settings.SettingsFlowFragment"
        android:label="fragment_settings_flow"
        tools:layout="@layout/fragment_settings_flow" />

</navigation>